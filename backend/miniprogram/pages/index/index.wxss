/* index.wxss */
.welcome {
  text-align: center;
  margin-bottom: 60rpx;
  padding-top: 40rpx;
}

.welcome-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: #666;
}

.function-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 40rpx;
  margin-bottom: 60rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.3s ease;
}

.grid-item:active {
  transform: scale(0.98);
}

.grid-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.upload-icon {
  background-color: #e6f7ff;
  color: #1890ff;
}

.config-icon {
  background-color: #f6ffed;
  color: #52c41a;
}

.history-icon {
  background-color: #fff7e6;
  color: #fa8c16;
}

.user-icon {
  background-color: #fff0f6;
  color: #eb2f96;
}

.grid-text {
  font-size: 28rpx;
  color: #333;
}

.feature-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.feature-content {
  flex: 1;
}

.feature-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 5rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #666;
}
