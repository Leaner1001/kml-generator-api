<view class="container">
  <view class="welcome">
    <view class="welcome-title">欢迎使用图层生成工具</view>
    <view class="welcome-subtitle">
      {{userInfo ? '你好，' + userInfo.nickname : '请登录后使用'}}
    </view>
  </view>

  <view class="function-grid">
    <view class="grid-item" bindtap="navigateToUpload">
      <view class="grid-icon upload-icon"></view>
      <view class="grid-text">上传文件</view>
    </view>
    <view class="grid-item" bindtap="navigateToConfig">
      <view class="grid-icon config-icon"></view>
      <view class="grid-text">图层配置</view>
    </view>
    <view class="grid-item" bindtap="navigateToHistory">
      <view class="grid-icon history-icon"></view>
      <view class="grid-text">生成历史</view>
    </view>
    <view class="grid-item" bindtap="navigateToUser">
      <view class="grid-icon user-icon"></view>
      <view class="grid-text">个人中心</view>
    </view>
  </view>

  <view class="feature-card">
    <view class="card-title">功能介绍</view>
    <view class="feature-list">
      <view class="feature-item">
        <view class="feature-icon">📊</view>
        <view class="feature-content">
          <view class="feature-name">基站扇区图层</view>
          <view class="feature-desc">根据方向角和PCI生成扇形覆盖区域</view>
        </view>
      </view>
      <view class="feature-item">
        <view class="feature-icon">📡</view>
        <view class="feature-content">
          <view class="feature-name">RSRP点图层</view>
          <view class="feature-desc">根据信号强度生成不同颜色的点</view>
        </view>
      </view>
      <view class="feature-item">
        <view class="feature-icon">🏗️</view>
        <view class="feature-content">
          <view class="feature-name">光交/机房图层</view>
          <view class="feature-desc">生成光交箱、机房等设施点位</view>
        </view>
      </view>
    </view>
  </view>
</view>
