<view class="container">
  <view class="user-section">
    <view class="user-avatar">
      <image src="{{userInfo.avatar || '/images/default-avatar.png'}}" mode="aspectFill"></image>
    </view>
    <view class="user-info">
      <view class="user-name">{{userInfo.nickname}}</view>
      <view class="user-phone">{{userInfo.phone}}</view>
    </view>
  </view>

  <view class="menu-section">
    <view class="menu-item" bindtap="navigateToConfig">
      <view class="menu-icon">⚙️</view>
      <view class="menu-text">图层配置</view>
      <view class="menu-arrow">›</view>
    </view>
    <view class="menu-item" bindtap="aboutUs">
      <view class="menu-icon">ℹ️</view>
      <view class="menu-text">关于我们</view>
      <view class="menu-arrow">›</view>
    </view>
    <view class="menu-item" bindtap="feedback">
      <view class="menu-icon">📝</view>
      <view class="menu-text">意见反馈</view>
      <view class="menu-arrow">›</view>
    </view>
  </view>

  <button class="btn btn-default logout-btn" bindtap="logout">退出登录</button>

  <view class="version-info">版本 1.0.0</view>
</view>
