/* login.wxss */
.login-form {
  max-width: 600rpx;
  margin: 100rpx auto;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 60rpx;
}

.input-with-suffix {
  position: relative;
  display: flex;
  align-items: center;
}

.code-input {
  flex: 1;
  margin-right: 20rpx;
}

.code-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #07C160;
  background-color: transparent;
  border: 1rpx solid #07C160;
  border-radius: 10rpx;
  padding: 0;
}

.code-btn[disabled] {
  color: #999;
  border-color: #ddd;
}

.tip {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.placeholder {
  color: #999;
}
