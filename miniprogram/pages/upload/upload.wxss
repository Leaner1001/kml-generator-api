/* upload.wxss */
.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  border: 2rpx dashed #ddd;
  border-radius: 20rpx;
  background-color: #f9f9f9;
  margin-bottom: 40rpx;
  transition: all 0.3s ease;
}

.upload-area:active {
  background-color: #f0f0f0;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
}

.file-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f0f9ff;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
}

.file-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.file-size {
  font-size: 24rpx;
  color: #666;
  margin-right: 20rpx;
}

.delete-btn {
  font-size: 24rpx;
  color: #ff4d4f;
  background-color: transparent;
  border: none;
  padding: 0;
}

.layer-type-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.type-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  border: 2rpx solid #ddd;
  border-radius: 15rpx;
  background-color: #fff;
  width: calc(33.333% - 13.333rpx);
  transition: all 0.3s ease;
}

.type-item.active {
  border-color: #07C160;
  background-color: #f6ffed;
}

.type-item:active {
  transform: scale(0.98);
}

.type-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.type-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

.upload-btn {
  margin-top: 40rpx;
}

.tips-section {
  margin-top: 40rpx;
  padding: 20rpx;
  background-color: #fff7e6;
  border-radius: 10rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #fa8c16;
  margin-bottom: 10rpx;
}

.tips-list {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.tips-item {
  margin-bottom: 5rpx;
}
